{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@gracile/gracile/tsconfigs/strictest",
  "compilerOptions": {
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-unknown-tag-name": "off",
          "no-unknown-attribute": "off"
        }
      }
    ]
  }
}
