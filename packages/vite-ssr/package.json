{
  "name": "@hp-stuff/vite-frontend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development concurrently -k -n SERVER,CLIENT,CSS,HTML -c green,blue,magenta,cyan \"pnpm:watch:server\" \"pnpm:watch:client\" \"pnpm:watch:css\" \"pnpm:watch:html\"",
    "watch:server": "nodemon --watch src/server --ext ts --exec \"tsx src/server/server.ts\"",
    "watch:client": "chokidar 'src/client/**/*.ts' -c 'pnpm build:client' --initial",
    "watch:css": "chokidar 'src/styles/**/*.css' -c 'pnpm build:css' --initial",
    "watch:html": "chokidar 'src/**/*.html' -c 'pnpm build:html' --initial",
    "build:css": "postcss src/styles/global.css -o dist/styles/global.css",
    "build:ts": "tsc && tsc-alias",
    "build:client": "tsx bin/build-client.ts",
    "build:html": "rsync -av --include='*/' --include='*.html' --exclude='*' src/ dist/",
    "build": "pnpm build:css && pnpm build:ts && pnpm build:html",
    "serve": "node dist/server/index.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "@hono/zod-validator": "^0.4.3",
    "hono": "^4.7.6",
    "lit": "^3.2.1",
    "rehype": "^13.0.2",
    "rehype-parse": "^9.0.1",
    "rehype-stringify": "^10.0.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "vfile": "^6.0.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@greenwood/plugin-postcss": "0.32.0-alpha.9",
    "@types/hast": "^3.0.4",
    "@types/livereload": "^0.9.5",
    "@types/node": "^22.14.0",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "cssnano": "^7.0.6",
    "esbuild": "^0.25.2",
    "glob": "^11.0.1",
    "livereload": "^0.9.3",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^16.1.0",
    "postcss-lit": "^1.2.0",
    "postcss-load-config": "^6.0.1",
    "postcss-nesting": "^13.0.1",
    "postcss-preset-env": "^10.1.5",
    "postcss-sorting": "^9.1.0",
    "tsc-alias": "^1.8.15",
    "tsx": "^4.19.3",
    "typescript": "~5.8.3"
  },
  "overrides": {
    "vite": "6.2.6"
  }
}
