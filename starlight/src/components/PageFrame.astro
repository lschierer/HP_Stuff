---
import type { Props } from '@astrojs/starlight/props';
import Default from "@astrojs/starlight/components/PageFrame.astro"
import '@lit-labs/ssr-client/lit-element-hydrate-support.js';
---


<sp-theme
  theme="spectrum"
  color="light"
  scale="medium"
  class="spectrum spectrum--medium spectrum--light"
>
  <Default class=".header" {...Astro.props}>
    <slot name="header" slot="header"/>
    <slot name="sidebar" slot="sidebar"/>
    <slot />
  </Default>
</sp-theme>

<script type="module" is:inline>

import '/node_modules/@spectrum-web-components/theme/sp-theme.js';
import '/node_modules/@spectrum-web-components/theme/src/themes.js';

</script>
